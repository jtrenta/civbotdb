    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Test Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            //"args":["DEBUG=express:paths"]
            "trace":true,
            "outputCapture": "std",
            "cwd": "${workspaceFolder}\\civbot",
            "program": "${workspaceRoot}\\civbot\\node_modules\\jest\\bin\\jest.js"
            
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args":["LOCALDEV"],
            "trace":true,
            "outputCapture": "std",
            "cwd": "${workspaceFolder}\\civbot",
            "program": "${workspaceFolder}\\civbot\\bin\\www"
            
        }
    ]
}